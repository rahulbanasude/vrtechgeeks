
  <!-- Header -->
  <header class="w3-container w3-center w3-padding-24 w3-white">
    <h1 class="w3-xxxlarge"><b>VRTechGeeks</b></h1>

  </header>

 <div class="w3-row w3-padding w3-border">
   <!-- Blog entries -->
   <div class="w3-col l8 s12">
    <% @posts.each do |post|%>
    <div class="w3-container w3-white w3-margin w3-padding-large">
      <div class="w3-center">
<h3><%= link_to post.title,  post, target: "_blank" %></h3>
<h5><span class="w3-opacity"><%= post.created_at.strftime("%B, %d, %Y") %></span></h5>

</div>
  <div class="w3-justify">
     <%= image_tag post.image.url(), class: "w3-padding-16", width: "100%" %>
</div>
</div>

      <% end %>
</div>

</div>
